# Server Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Firebase Backend Configuration (Optional)
# Set to true to use Firebase Firestore for user storage
USE_FIREBASE=false

# Firebase Service Account JSON (required if USE_FIREBASE=true)
# IMPORTANT: Get this from Firebase Console:
#   1. Go to Firebase Console → satmath-5c66b
#   2. Project Settings (⚙️) → Service Accounts tab
#   3. Click "Generate New Private Key"
#   4. Copy the entire JSON and paste it as a single line (no newlines)
#   Example: {"type":"service_account","project_id":"satmath-5c66b",...}
FIREBASE_SERVICE_ACCOUNT=

# Firebase Project ID (optional, auto-detected from service account if provided)
FIREBASE_PROJECT_ID=satmath-5c66b
